<div class="comment">
  <div class="content">
    <a class="author"><%= comment.user.name %></a>
    <div class="metadata">
      <span class="date"><%= comment.created_at %></span>
    </div>
    <div class="text">
      <%= comment.content %>
<!--             <%= simple_format comment.content %>
-->
    </div>
  </div>
</div>

<% if current_user.id == comment.user_id ||current_user.id == @course.user_id %>
  <div class="actions">
    <%= link_to "Delete",course_coursetextbook_comment_path(@course,@coursetextbook, comment) ,method: :delete ,  data: { confirm: 'Are you sure?' }, :remote => true %>
  </div>
<% end %>
<hr>

