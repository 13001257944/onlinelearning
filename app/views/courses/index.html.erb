<p id="notice"><%= notice %></p>

<h1>課程列表</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.user_id %></td>
        <td><%= link_to '進入課程', course_path(course)  %></td>
        <% if current_user.id == course.user_id %>
          <td><%= link_to '編輯', edit_course_path(course) %></td>
          <td><%= link_to '', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to '註冊' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

