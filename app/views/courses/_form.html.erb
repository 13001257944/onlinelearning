<div class="form container">
  <%= form_with(model: course, local: true) do |form| %>
    <% if course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :course_name , class: "form-control" %>
    </div>

    <div class="form-group">
      <h4 class="mb-3">課程狀態</h4>
      <div class="d-block my-3">
        <div class="custom-control custom-radio">
          <%= form.radio_button :status, "公開" ,:checked =>true ,:class=>"custom-control-input" ,:required => true %>
          <%= form.label :status, "公開" %>
        </div>
        <div class="custom-control custom-radio">
          <%= form.radio_button :status, "不公開" ,:checked =>false ,:class=>"custom-control-input" ,:required => true %>
          <%= form.label :status, "不公開" %>
        </div>
      </div>
    </div>
              

    <div class="form-group">
      <%= form.label :photo %>
      <%= form.file_field :photo, id: :course_photo , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, id: :course_description , class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit %>
    </div>
  <% end %>
</div>
